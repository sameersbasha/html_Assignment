        img {
            position: absolute;
            top: 10px;
            right: 10px;
            margin: 0;
        }

        .first-paragraph {
            position: absolute;
            bottom: 15px;
            left: 15px;
            margin: 0;
        }

        .second-paragraph {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            text-align: center;
            margin: 0;
        }
    </style>
